{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",  // Change "bundler" to "node"
    "target": "es2020",           // Change "ES2022" to "es2020" (or another valid target)
    "module": "es2020",           // Change "ES2022" to "es2020" (or another valid module)
    "lib": [
      "es2020",                   // Change "ES2022" to "es2020" (or other valid libs)
      "dom"
    ]
  }
}
